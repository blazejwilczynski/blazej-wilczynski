import InstagramLogo from "../assets/icons/instagram-logo.astro";
import BWLogo from "../assets/icons/bw-logo-25px-42px.svg";
---

  <header>
  <div class="header-wrap">
    <div class="bw-logo"></div>
    <nav>
      <div class="nav-element">
        <a href="#www">WWW</a>
      </div>
      <div class="nav-element">
        <a href="#gfx">GRAFIKA</a>
      </div>
      <div class="nav-element">
        <a href="#books">KSIĄŻKI</a>
      </div>
      <div class="nav-element">
        <a href="#about">O MNIE</a>
      </div>
      <div class="nav-element">
        <a href="#contact">KONTAKT</a>
      </div>
    </nav>
    <div class="social-icons-wrap">
      <div class="social-links">
       
        <div class="social-logo">
          <a href="http://www.behance.com/blazejwilczynski" target="_blank"
            ><BehanceLogo /></a
          >
        </div>
    
        <div class="social-logo">
          <a href="http://www.instagram.com/blazej_wilczynski" target="_blank"
            ><InstagramLogo /></a>
        </div>
