---
import BobekLanding from "../assets/images/bobek-landing-01.png";
import BobekLandingMobile from "../assets/images/bobek-landing-mobile.png";
import CrossIcon from "../assets/images/cross-icon.svg";
---

<div class="landing">
  <div class="landing__wrapper">
    <div
      class="bobek__landing__image"
      style={`background-image: url(${BobekLanding.src});`}
    >
    </div>

    <div
      class="bobek__landing__image__mobile"
      style={`background-image: url(${BobekLandingMobile.src});`}
    >
    </div>

    <div class="landing__text__wrapper">
      <h1>
        Błażej Wilczyński
        <img src={CrossIcon.src} alt="" class="cross" />
      </h1>
      <div class="underline"></div>
      <p class="subtitle">
        Książki <span class="slash__landing">/</span> Grafika
      </p>
    </div>

    <!-- ================== Mobile Text Wrapper Start ====================  -->

    <div class="landing__text__wrapper__mobile">
      <h1>
        <span class="name__mobile">Błażej</span> Wilczyński
        <img src={CrossIcon.src} alt="" class="cross__mobile" />
      </h1>
      <div class="underline__mobile"></div>
      <p class="subtitle__mobile">
        Książki <span class="slash__landing__mobile">/</span> Grafika
      </p>
    </div>

    <!-- ================== Mobile Text Wrapper End ====================  -->
  </div>
</div>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap");

  .landing {
    width: 100%;
    height: 600px;
    margin-top: 60px;
    background: linear-gradient(to bottom, #3bbca5, #3ea290);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .landing__wrapper {
    width: 100%;
    max-width: 1180px;
    height: 100%;
    /* background-color: salmon; */
    display: flex;
    justify-content: space-around;
  }

  .bobek__landing__image {
    height: 530px;
    margin-top: auto;
    width: 389px;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: bottom center;
  }

  .bobek__landing__image__mobile {
    display: none;
  }

  .landing__text__wrapper__mobile {
    display: none;
  }

  .landing__text__wrapper {
    width: 100%;
    max-width: 700px;
    height: 400px;
    font-family: "Inter", sans-serif;
    /* background-color: lightpink; */
    margin: auto 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding-left: 40px;
    padding-bottom: 90px;
  }

  .landing__text__wrapper h1 {
    font-size: 80px;
    font-weight: 500;
    color: white;
    margin-bottom: 10px;
    line-height: 1;
    position: relative;
    text-align: left;
    margin-left: 30px;
  }

  .cross {
    position: absolute;
    top: -30px;
    /* right: 30px; */
    width: 50px;
    height: 30px;
    opacity: 0.8;
  }

  .underline {
    width: 50%;
    height: 6px;
    background-color: var(--red-base-fade);
    margin-top: 10px;
    margin-left: auto;
    margin-right: 60px;
  }

  .subtitle {
    font-size: 2.5rem;
    color: white;
    font-weight: 300;
    text-align: right;
    margin-right: 60px;
    margin-block-start: 0.75rem;
    margin-block-end: 0.75rem;
  }

  .slash__landing {
    color: var(--red-base-fade);
    font-weight: 600;
  }

  /* ============================ BREAKPOINTS ============================== */

  /* ---------------------------- 1325 px ---------------------------------- */

  @media screen and (max-width: 1325px) {
    .landing__wrapper {
      justify-content: center;
    }

    .landing__text__wrapper {
      max-width: 650px;
      padding-left: 0px;
      padding-right: 60px;
    }

    .underline {
      margin-right: 10px;
    }

    .subtitle {
      margin-right: 10px;
    }
  }

  /* ---------------------------- 1200 px ---------------------------------- */

  @media screen and (max-width: 1200px) {
    .bobek__landing__image {
      margin-left: 60px;
    }

    .landing__text__wrapper h1 {
      font-size: 70px;
      margin-left: 60px;
    }

    .underline {
      margin-right: 55px;
    }

    .subtitle {
      margin-right: 55px;
    }
  }

  /* ---------------------------- 1170 px ---------------------------------- */

  @media screen and (max-width: 1170px) {
    .landing {
      height: 500px;
    }

    .bobek__landing__image {
      height: 430px;
    }
  }

  /* ---------------------------- 1090 px ---------------------------------- */

  @media screen and (max-width: 1090px) {
    .landing__text__wrapper {
      max-width: 450px;
      padding-left: 0px;
      padding-right: 60px;
    }

    .landing__text__wrapper h1 {
      font-size: 65px;
      margin-left: 80px;
      line-height: 1.1;
    }

    .underline {
      width: 68%;
    }

    .subtitle {
      font-size: 2.8rem;
    }

    .cross {
      top: -30px;
      right: 150px;
      /* right: 30px; */
    }
  }

  /* ---------------------------- 900 px ---------------------------------- */

  @media screen and (max-width: 900px) {
    .landing {
      height: 450px;
      justify-content: space-between;
    }

    .bobek__landing__image {
      height: 380px;
    }

    .landing__text__wrapper {
      max-width: 400px;
      margin-bottom: 0px;
      margin-top: -30px;
    }

    .landing__text__wrapper h1 {
      font-size: 55px;
      margin-left: 70px;
    }

    .subtitle {
      font-size: 2.4rem;
      margin-right: 60px;
    }

    .underline {
      width: 65%;
      margin-right: 60px;
    }

    .cross {
      top: -25px;
      right: 135px;
      /* right: 30px; */
    }
  }

  /* ---------------------------- 800 px ---------------------------------- */

  @media screen and (max-width: 800px) {
    .landing__text__wrapper {
      display: none !important;
    }

    .bobek__landing__image {
      margin-left: 0px;
      width: 280px;
    }

    .landing__text__wrapper__mobile {
      max-width: 210px;
      margin: auto 0;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
    }

    .landing__text__wrapper__mobile h1 {
      font-size: 42px;
      font-weight: 500;
      color: white;
      margin-bottom: 10px;
      line-height: 1.2;
      position: relative;
      text-align: right;
    }

    .name__mobile {
      font-size: 46px;
    }

    .cross__mobile {
      display: none;
    }

    .underline__mobile {
      width: 100%;
      height: 4px;
      background-color: var(--red-base-fade);
      margin-top: 4px;
      /* margin-left: auto;
      margin-right: 60px; */
    }

    .subtitle__mobile {
      font-size: 28px;
      color: white;
      font-weight: 300;
      text-align: right;
      /* margin-right: 60px; */
      margin-block-start: 0.75rem;
      margin-block-end: 0.75rem;
    }

    .slash__landing__mobile {
      color: var(--red-base-fade);
      font-weight: 600;
    }
  }

  /* ---------------------------- 600 px ---------------------------------- */

  @media screen and (max-width: 600px) {
    .landing {
      width: 100%;
      height: 800px;
    }

    .landing__wrapper {
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .bobek__landing__image {
      display: none;
    }

    .bobek__landing__image__mobile {
      display: block;
      height: 520px;
      margin-top: 0px;
      width: 320px;
      background-size: contain;
      background-repeat: no-repeat;
      background-position: bottom center;
    }

    .landing__text__wrapper__mobile {
      margin: 0;
      max-width: 240px;
    }

    .landing__text__wrapper__mobile h1 {
      margin-top: 0;
      text-align: left;
      font-size: 44px;
    }

    .subtitle__mobile {
      text-align: center;
      font-size: 32px;
    }
  }
</style>
