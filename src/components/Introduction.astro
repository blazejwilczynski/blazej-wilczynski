---
import BlazejCzarusia from "../assets/images/blazej_czarusia.jpg";
---

<div class="introduction">
  <div class="introduction__wrapper">
    <div class="description"></div>
  </div>
  <div class="photo__wrapper">
    <div class="photo__bobek">
      <img src={BlazejCzarusia.src} alt="Błażej Czarusia" />
    </div>
  </div>
</div>

<style>
  .introduction {
    height: 800px;
    width: 100%;
    display: flex;
  }

  .introduction__wrapper {
    width: 50%;
    height: 100%;
    background-color: #f7f1eb;
    display: flex;
  }

  .photo__wrapper {
    width: 50%;
    height: 100%;
    background-color: #121212;
    display: flex;
  }

  .description {
    height: 100%;
    width: 100%;
    max-width: 590px;
    background-color: lightcoral;
    margin-left: auto;
    box-sizing: border-box;
    padding: 45px;
  }

  .photo__bobek {
    height: 100%;
    width: 100%;
    /* max-width: 590px; */
    background-color: lightgray;
    margin-right: auto;
    overflow: hidden;
    position: relative;
  }

  .photo__bobek img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    position: absolute;
    object-position: center 15%; 
  }
</style>
