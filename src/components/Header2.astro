---
import BehanceLogo from "../assets/icons/behance-logo.astro";
import InstagramLogo from "../assets/icons/instagram-logo.astro";
import BwLogo from "../assets/icons/bw-logo-25px-42px.svg";
---

<header class="header">
  <div class="inner">
    <div class="logo">
      <a href="/" aria-label="Strona główna">
        <img
          src={BwLogo.src}
          width={BwLogo.width}
          height={BwLogo.height}
          alt="BW logo"
        />
      </a>
    </div>

    <!--============= NAV MENU ============= -->

    <nav class="nav__menu" id="nav-menu">
      <ul class="nav__list">
        <li><a href="#" class="nav__link">Home</a></li>

        <!--============== DROPDOWN ELEMENT============= -->

        <li class="dropdown__item">
          <div class="nav__link">
            Książki<i class="ri-arrow-down-s-line dropdown__arrow"></i>
          </div>

          <ul class="dropdown_menu">
            <li>
              <a href="" class="dropdown__link"> Czarusia </a>
            </li>
            <li>
              <a href="" class="dropdown__link"> Skeleton </a>
            </li>
            <li>
              <a href="" class="dropdown__link"> Rockstar </a>
            </li>
          </ul>
        </li>

        <!--============== END OF DROPDOWN ELEMENT ============= -->

        <li><a href="#" class="nav__link">Grafika</a></li>
        <li><a href="#" class="nav__link">Blog</a></li>
        <li><a href="#" class="nav__link">Kontakt</a></li>
      </ul>
    </nav>

    <div class="socials">
      <a
        class="social-logo"
        href="http://www.behance.com/blazejwilczynski"
        target="_blank"
        rel="noreferrer"
      >
        <BehanceLogo />
      </a>

      <a
        class="social-logo"
        href="http://www.instagram.com/blazejwilczynski"
        target="_blank"
        rel="noreferrer"
      >
        <InstagramLogo />
      </a>
    </div>
    <div class="nav__toggle" id="nav-toggle">
      <i class="ri-menu-2-line nav__burger"></i>
      <i class="ri-close-line nav__close"></i>
    </div>
  </div>
</header>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;600;700&display=swap");

  /* =========================
   HEADER – CONFIG
========================= */

  * {
    box-sizing: border-box;
  }

  ul {
    list-style: none;
  }

  .header {
    --accent-red: #e11d48; /* główny czerwony */
    background: #ffffff;
    position: fixed;
    top: 0px;
    left: 0;
    right: 0;
    z-index: 1000;
  }

  /* =========================
   LAYOUT
========================= */
  .inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px 28px;
    display: flex;
    align-items: center;
    gap: 24px;
    font-family:
      "Manrope",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      sans-serif;
  }

  /* 3 strefy */
  .logo {
    flex: 1;
    height: 25px;
    width: 42px;
    color: #111;
  }

  .nav__menu ul li {
    flex: none;
    justify-content: center;
    padding-top: 5px;
  }

  .socials {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    gap: 16px;
  }

  .nav__burger,
  .nav__close {
    font-size: 24px;
  }

  .nav__toggle {
    position: relative;
    width: 32px;
    height: 32px;
  }

  .nav__burger,
  .nav__close {
    position: absolute;
    width: max-content;
    height: max-content;
    inset: 0;
    margin: auto;
    font-size: 1.25rem;
    cursor: pointer;
    transition:
      opacity 0.1s,
      transform 0.4s;
  }

  .nav__close {
    opacity: 0;
  }

  /* =========================
   NAV –  red hover
========================= */
  .nav__menu a,
  .nav__link {
    position: relative;
    text-decoration: none;
    color: rgba(17, 17, 17, 0.75);
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.01em;
    padding: 6px 2px;
    transition:
      color 180ms ease,
      transform 180ms ease;
  }

  /* Animated Line */
  .nav__menu a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -4px;
    width: 100%;
    height: 2px;
    background: var(--accent-red);
    border-radius: 999px;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 220ms ease;
  }

  .nav__menu a:hover {
    color: var(--accent-red);
  }

  .nav__menu a:hover::after {
    transform: scaleX(1);
  }

  .nav__menu a:active {
    transform: translateY(1px);
  }

  .nav__menu a:focus-visible {
    outline: 2px solid color-mix(in srgb, var(--accent-red) 40%, transparent);
    outline-offset: 4px;
    border-radius: 6px;
  }

  /* =========================
   DROPDOWN MENU
========================= */

  .dropdown__item {
    cursor: pointer;
  }

  .dropdown__arrow {
    transition: transform 0.4s;
  }

  .dropdown__link {
    flex: none;
  }

  ul.dropdown_menu {
    padding-top: 0px;
    padding-bottom: 10px;
    padding-inline-start: 10px;
  }

  /* =========================
   SOCIAL ICONS 
========================= */
  .social-logo {
    width: 21px;
    height: 21px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: rgba(17, 17, 17, 0.7);
    transition:
      color 180ms ease,
      transform 180ms ease,
      filter 180ms ease;
  }

  /* SVG MUSI iść za kolorem */
  .social-logo :global(svg) {
    width: 21px;
    height: 21px;
    display: block;
  }

  /* hover: kolor + lift + delikatny glow */
  .social-logo:hover {
    color: var(--accent-red);
    transform: translateY(-1px);
    filter: drop-shadow(
      0 6px 10px color-mix(in srgb, var(--accent-red) 22%, transparent)
    );
  }

  .social-logo:active {
    transform: translateY(0);
    filter: none;
  }

  .social-logo:focus-visible {
    outline: 2px solid color-mix(in srgb, var(--accent-red) 40%, transparent);
    outline-offset: 4px;
    border-radius: 6px;
  }

  /* =======================================================================
   NAVIGATION FOR MOBILE DEVICES 
========================================================================== */

  @media screen and (max-width: 1118px) {
    .nav__menu {
      position: absolute;
      left: 0;
      top: 60px;
      width: 100%;
      height: calc(100vh - 60px);
      background-color: gray;
      overflow: auto;
      pointer-events: none;
      opacity: 0;
      transition:
        top 0.4s,
        opacity 0.3s;
    }

    .nav__menu::-webkit-scrollbar {
      width: 0;
    }

    .nav__menu ul {
      margin-block-start: 0;
      margin-block-end: 0;
      padding: 0 0 0 0;
    }

    .nav__menu ul li {
      flex: none;
    }

    ul.dropdown_menu {
      padding-top: 10px;
      padding-inline-start: 10px;
    }

    /* .nav__list {
    background-color: #111;
  } */

    .nav__link {
      font-weight: 600;
      font-size: 40px;
    }

    .nav__menu a {
      font-size: 40px;
    }

    .logo {
      flex: 0;
    }

    .socials {
      visibility: hidden;
    }

    /* ===========================
     SHOW MENU
=========================== */

    .show-menu {
      opacity: 1;
      top: 72px;
      pointer-events: initial;
    }

    /* Show icon */

    .show-icon .nav__burger {
      opacity: 0;
      transform: rotate(90deg);
    }

    .show-icon .nav__close {
      opacity: 1;
      transform: rotate(90deg);
    }
  }
</style>

<script is:inline>
  // ================= SHOW MENU =================

  const showMenu = (toggleId, navId) => {
    const toggle = document.getElementById(toggleId),
      nav = document.getElementById(navId);

    toggle.addEventListener("click", () => {
      //Adding show-menu class to nav menu
      nav.classList.toggle("show-menu");
      //Adding show-icon to show and hide menu icon
      toggle.classList.toggle("show-icon");
    });
  };

  showMenu("nav-toggle", "nav-menu");
</script>
